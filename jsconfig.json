{
  "compilerOptions": {
    /**
     * Project paths
     */
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"]
    },

    /**
     * Type checking
     */
    "checkJs": true,
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "useUnknownInCatchVariables": true,

    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "react-jsx"
  },

  "typeAcquisition": {
    "include": ["jest"]
  },

  "include": ["./src/**/*", "./test/**/*"]
}
